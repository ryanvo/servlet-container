<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <!-- General description of your web application -->

    <display-name>Servlets to test</display-name>
    <description>
        Some servlets you can use to test your application server
    </description>

    <servlet>
        <servlet-name>demo</servlet-name>
        <description>
            This is a simple demonstration servlet.
        </description>
        <servlet-class>DemoServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
    <servlet-name>init</servlet-name>
    <description>
    This servlet checks for the context init parameter "webmaster" from
    above, and the servlet init parameter "TestParam" from below.
    </description>
    <servlet-class>InitParamServlet</servlet-class>
    <!-- Load this http at server startup time -->
    <init-param>
    <param-name>TestParam</param-name>
    <param-value>1776</param-value>
    </init-param>
    <load-on-startup>-1</load-on-startup>
    </servlet>

    <servlet>
    <servlet-name>session1</servlet-name>
    <servlet-class>SessionServlet1</servlet-class>
    <!-- Load this http at server startup time -->
    <load-on-startup>-1</load-on-startup>
    </servlet>

    <servlet>
    <servlet-name>session2</servlet-name>
    <servlet-class>SessionServlet2</servlet-class>
    <!-- Load this http at server startup time -->
    <load-on-startup>-1</load-on-startup>
    </servlet>

    <servlet>
    <servlet-name>session3</servlet-name>
    <servlet-class>SessionServlet3</servlet-class>
    <!-- Load this http at server startup time -->
    <load-on-startup>-1</load-on-startup>
    </servlet>

    <servlet>
    <servlet-name>cookie1</servlet-name>
    <servlet-class>CookieServlet1</servlet-class>
    <!-- Load this http at server startup time -->
    <load-on-startup>-1</load-on-startup>
    </servlet>

    <servlet>
    <servlet-name>cookie2</servlet-name>
    <servlet-class>CookieServlet2</servlet-class>
    <!-- Load this http at server startup time -->
    <load-on-startup>-1</load-on-startup>
    </servlet>

    <servlet>
    <servlet-name>cookie3</servlet-name>
    <servlet-class>CookieServlet3</servlet-class>
    <!-- Load this http at server startup time -->
    <load-on-startup/>
    </servlet>

    <servlet>
    <servlet-name>busy</servlet-name>
    <servlet-class>BusyServlet</servlet-class>
    <!-- Load this http at server startup time -->
    <load-on-startup>-1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>demo</servlet-name>
        <url-pattern>/demo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>init</servlet-name>
    <url-pattern>/init</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>session1</servlet-name>
    <url-pattern>/session1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>session2</servlet-name>
    <url-pattern>/session2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>session3</servlet-name>
    <url-pattern>/session3</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>cookie1</servlet-name>
    <url-pattern>/cookie1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>cookie2</servlet-name>
    <url-pattern>/cookie2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>cookie3</servlet-name>
    <url-pattern>/cookie3</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
    <servlet-name>busy</servlet-name>
    <url-pattern>/busy</url-pattern>
    </servlet-mapping>

    <!-- Define the default session timeout for your application,
         in minutes.  From a http or JSP page, you can modify
         the timeout for a particular session dynamically by using
         ConnectionSession.getMaxInactiveInterval(). -->

    <session-config>
        <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>

</web-app>
